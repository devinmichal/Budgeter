@model WebApplication4.Models.Household

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Household</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Users)
        </dt>
        @foreach (var u in Model.Users)
        {
        <dd>
         @Html.DisplayFor(users => u.UserName)   
        </dd>
        }
        <dt>
            @Html.DisplayName("Bank Accounts:")
        </dt>
        <dd></dd>
        @foreach (var ba in Model.BankAccounts)
        {
        <dt>
         @Html.DisplayName("Account With")   
        </dt>
        <dd>
         @Html.DisplayFor(bankaccount => ba.AccountWith.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(bankaccount => ba.Type)
        </dt>
        <dd>
            @Html.DisplayFor(bankaccount => ba.Type.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(bankaccount => ba.Amount)
        </dt>
        <dd>
            @Html.DisplayFor(bankaccount => ba.Amount)
        </dd>
        
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
