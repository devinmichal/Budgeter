@model IEnumerable<WebApplication4.Models.BankAccount>

<div class="box-info full">
    <h2><strong>Bank Accounts</strong></h2>

    <!-- Additional buttons -->
    <div class="additional-btn">

        <a class="additional-icon" href="#" data-toggle="collapse" data-target="#accounts-report"><i class="fa fa-chevron-down"></i></a>
    </div>

    <div id="accounts-report" class="collapse in">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                     Bank
                        </th>
                     
                        <th>
                          Type
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            Options
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        if (item.Amount > 0)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.AccountWith.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Type.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <div class="btn-group btn-group-xs" >
                                    <a href="@Url.Action("Edit", "BankAccounts", new { id = item.Id })" data-toggle="tooltip" title="edit" class="btn btn-default"><i class="fa fa-edit"></i></a>
                                    <a href="@Url.Action("Details", "BankAccounts", new { id = item.Id })" data-toggle="tooltip" title="details" class="btn btn-default"><i class="fa fa-info"></i></a>
                                    <a href="@Url.Action("Delete", "BankAccounts", new { id = item.Id })" data-toggle="tooltip" title="delete" class="btn btn-default"><i class="fa fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                        }
                        else
                        {
                            <tr class="danger">
                                <td>
                                    @Html.DisplayFor(modelItem => item.AccountWith.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Type.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    <div class="btn-group btn-group-xs">
                                        <a href="@Url.Action("Edit", "BankAccounts", new { id = item.Id })" data-toggle="tooltip" title="edit" class="btn btn-default"><i class="fa fa-edit"></i></a>
                                        <a href="@Url.Action("Details", "BankAccounts", new { id = item.Id })" data-toggle="tooltip" title="details" class="btn btn-default"><i class="fa fa-info"></i></a>
                                        <a href="@Url.Action("Delete", "BankAccounts", new { id = item.Id })" data-toggle="tooltip" title="delete" class="btn btn-default"><i class="fa fa-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            </div>
</div>
</div>