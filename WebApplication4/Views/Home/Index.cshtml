<!-- Page Content -->
<a name="services"></a>
<div class="content-section-a">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-sm-6">
                <hr class="section-heading-spacer">
                <div class="clearfix"></div>
                <h2 class="section-heading">MyBudget</h2>
                <p class="lead">Powered by <a target="_blank" href="http://www.asp.net/mvc/mvc5/">ASP.NET MVC 5</a>.  This web application software is used to record monthly spending, track expenses and income and help set out a monthly budget for a users and it's account members.</p>
            </div>
            <div class="col-lg-5 col-lg-offset-2 col-sm-6">

                <img  class="img-responsive"src="~/Content/img/lg_aspmvc5.png" />
            </div>
        </div>
    </div>
    <!-- /.container -->
</div>
<!-- /.content-section-a -->
<div class="content-section-b">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-lg-offset-1 col-sm-push-6  col-sm-6">
                <hr class="section-heading-spacer">
                <div class="clearfix"></div>
                <h2 class="section-heading">Designed<br>with Bootstrap</h2>
                <p class="lead">Responsive mobile first layouts developed with <a target="_blank" href="http://getbootstrap.com/">Bootstrap</a>!</p>
            </div>
            <div class="col-lg-5 col-sm-pull-6  col-sm-6">
                <img class="img-responsive" src="~/Content/img/bootstrap.jpg" alt="">
            </div>
        </div>
    </div>
    <!-- /.container -->
</div>
<!-- /.content-section-b -->
<div class="content-section-a">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-sm-6">
                <hr class="section-heading-spacer">
                <div class="clearfix"></div>
                <h2 class="section-heading">Javascript<br></h2>
                <p class="lead"> Javascript was used along with Ajax to grab data from the database and place it into a chart.</p>
            </div>
            <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                <img class="img-responsive" src="~/Content/img/Js.png" alt="">
            </div>
        </div>
    </div>
    <!-- /.container -->
</div>
<!-- /.content-section-a -->
<a name="contact"></a>
<div class="banner">
    <div class="container">
        <div class="row" style="margin-bottom:18px">
            <div class="col-sm-6 col-sm-offset-4">
                <h2>Write Us</h2>
            </div>
            </div>
        <div class="row">
            <div class="col-sm-6 col-sm-offset-4">
               @using (Html.BeginForm("Contact","Home", FormMethod.Post))
               {
                <div class="form-group">
                    <label class="sr-only" for="Subject">Subject</label>
                    <input type="text" id="Subject" class="form-control" name="subject" placeholder="Subject" required="" data-validation-required-message="Please enter the subject." aria-invalid="false">
                    <p class="help-block text-danger"></p>
                </div>
                <div class="form-group">
                    <label class="sr-only" for="Body">Body</label>
                    <textarea id="Body" class="form-control" name="body" placeholder=" Leave Questions or Suggestions and Contact info" required="" data-validation-required-message="Question or Application Requests." aria-invalid="false"></textarea>
                    <p class="help-block text-danger"></p>
                </div>

                <button type="submit" class="btn btn-primary btn-round">Submit</button>

               }
            </div>
        </div>
    </div>
    <!-- /.container -->
</div>
<!-- /.banner -->