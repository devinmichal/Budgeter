@model IEnumerable<WebApplication4.Models.Transaction>


<div class="box-info full">
    <h2><strong>Transactions</strong></h2>

    <!-- Additional buttons -->
    <div class="additional-btn">

        <a class="additional-icon" href="#" data-toggle="collapse" data-target="#trans-report"><i class="fa fa-chevron-down"></i></a>
    </div>

    <div id="trans-report" class="collapse in">
        <div class="table-responsive">
            <table class="table table-striped" id="transactiontable">
                <thead>
                    <tr>
                        <th>
                          Account Name
                        </th>
                        <th>
                       Type
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                       Budget Category
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Amount)
                        </th>
                     
                       
                        <th>
                            Options
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.BankAccount.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Type.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BudgetCate.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date.Month)/@Html.DisplayFor(modelItem => item.Date.Year)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                      
                          
                            <td>
                                <div class="btn-group btn-group-xs">
                                    <a href="@Url.Action("Edit","Transactions",new { id = item.Id })" data-toggle="tooltip" title="edit" class="btn btn-default"><i class="fa fa-edit"></i></a>
                                    @*<a href="@Url.Action("Details","Transactions",new { id = item.Id })" data-toggle="tooltip" title="details" class="btn btn-default"><i class="fa fa-info"></i></a>*@
                                   
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
         
            </table>
</div>
        </div>
    </div>